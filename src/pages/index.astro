---
	import Layout from '../layouts/Layout.astro'
	import HeaderNavigation from '../components/HeaderNavigation.astro'
	import Container from '../layouts/Container.astro'
	import Hero from '../components/Hero.astro'

	const button = {text: 'Ассортимент', url: '/'}
---


<script>
  import Alpine from 'alpinejs'
  Alpine.start()
</script>
<Layout title="Welcome to Astro.">

	<HeaderNavigation
		menu={[
			{text: 'О нас', url: '/about'},
			{text: 'Главная', url: '/'},
			{text: 'Ассортимент', url: '/assort'},
		]}
	/>


	<Container>
		<Hero
			title="Узбекские казаны с доставкой по Минску за 4 часа"
			subtitle="Отправим в любую точку РБ"
			button={button}
		/>
	</Container>

</Layout>