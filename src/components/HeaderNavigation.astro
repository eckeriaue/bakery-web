---

  interface Props {
    menu: {text: string, url: string}[]
    logo?: string
  }
  const {logo = '', menu = [] } = Astro.props
---

<header class="flex">

  <div>
    { logo === '' ? 'Piter Bulka' : <img src={logo} alt="Питер Булка логотип" /> }
  </div>
  <menu class="flex gap-x-2">
    { menu.map((link, i) => (<li> <a href={link.url} set:text={link.text} /> </li>)) }
  </menu>
</header>